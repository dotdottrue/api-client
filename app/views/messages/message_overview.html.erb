<h1>Hallo <%= current_user.name %></h1>
<div>
  <h2>Gesendete Nachrichten</h2>
  <table>
    <thead>
      <tr>
        <th>Absender</th>
        <th>Nachricht</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @sended_messages.each do |message| %>
        <tr>
          <td><%= message["sender"] %></td>
          <td><%= message.message %></td>          
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Message', new_message_path %>
</div>