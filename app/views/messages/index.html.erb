<div class="right_box">
  <h1>Nachrichtenausgang</h1>

  <table class="table">
    <thead>
      <tr>
        <th width="15%">Sender</th>
        <th width="15%">Recipient</th>
        <th width="70%">Message</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @user_messages.each do |messages| %>
        <tr>
          <td><%= messages.sender %></td>
          <td><%= messages.recipient %></td>
          <td><%= messages.message %></td>
          <td><%= link_to 'Show', messages %></td>
          <td><%= link_to 'Destroy', messages, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to('Nachricht schreiben', new_message_path, class: 'btn btn-default') %>
</div>
