<div class="row">
  <div class="col-md-3"></div>
  <div class="col-md-6">
    <div class="panel panel-primary">
      <div class="panel-heading">Anmelden</div>
      <div class="panel-body">
        <%= form_for(:user_session, url: login_path) do |f| %>
          <div class="form-group">
              <%= f.label :name%><br>
              <%= f.text_field :name, class: "form-control"%>
          </div>
          <div class="form-group">
              <%= f.label :password%><br>
              <%= f.password_field :password, class: "form-control" %>
          </div>
          
          <div class="form-group">
              <%= f.submit "Anmelden", class: "btn btn-primary btn-sm" %>
              <%= link_to "Registrieren", new_user_path, class: "btn btn-default btn-sm" %>
          </div>
        <% end %>
      </div>
    </div>  
  </div>
  <div class="col-md-3"></div>
  </div>
</div>

