<h1>Log In</h1>

<div class="row">
  <div class="col-md-9 col-md-offset-3">
    <%= form_for(:user_session, url: login_path) do |f| %>
      <div class="field">
        <%= f.label :name %><br>
        <%= f.text_field :name %>
      </div>
      <div class="field">
        <%= f.label :password %><br>
        <%= f.text_field :password %>
      </div>
      <div class="actions">
        <%= f.submit "Log In", class: "btn btn-default btn-xs" %>
      </div>
    <% end %>

    <p>Sign up now? <%= link_to "Lets go!", new_user_path %></p>
  </div>
</div>

